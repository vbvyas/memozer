extends auth

block auth
  form.text-center.span6.offset2.login.form-horizontal(action="/users/session", method="post")
    input(type='hidden', name='_csrf', value="#{csrf_token}")

    p.error= message

    .control-group.row
      label.control-label(for='email') Email
      .controls
        input.input-large#email(type='email', name="email", placeholder='Email')

    .control-group.row
      label.control-label(for='password') Password
      .controls
        input.input-large#password(type='password', name="password", placeholder='Password')

    .form-actions.row
      button.btn.btn-primary(type='submit') Login
      &nbsp;
      | or &nbsp;
      a.show-signup(href="/signup").btn.btn-warning Sign Up
